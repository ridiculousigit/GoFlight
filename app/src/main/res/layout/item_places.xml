<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_margin="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    app:cardElevation="6dp">

    <RelativeLayout
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_places"
        android:layout_width="208dp"
        android:layout_height="185dp"
        android:src="@drawable/monumen_nasional"
        app:shapeAppearanceOverlay="@style/Circular2"/>

        <TextView
            android:id="@+id/name_places"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Monument Nasional"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_below="@id/img_places"
            android:layout_marginTop="8dp"/>
        <ImageView
            android:id="@+id/maps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/maps"
            android:layout_below="@id/name_places"/>
        <TextView
            android:id="@+id/lokasi"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="DKI Jakarta, INA"
            android:layout_below="@id/name_places"
            android:layout_marginLeft="24dp"
            android:fontFamily="@font/poppins_regular"/>
    </RelativeLayout>
    


</androidx.cardview.widget.CardView>